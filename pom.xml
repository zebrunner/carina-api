    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>11</java.version>
        <carina-utils.version>1.0.3</carina-utils.version>
        <carina-proxy.version>1.0.1</carina-proxy.version>
        <slf4j.version>1.7.30</slf4j.version>
        <commons-lang3.version>3.5</commons-lang3.version>
        <httpclient.version>4.5.13</httpclient.version>
        <commons-io.version>2.7</commons-io.version>
        <rest-assured.version>4.3.0</rest-assured.version>
        <commons-configuration2.version>2.8.0</commons-configuration2.version>
        <wiremock.version>2.27.2</wiremock.version>
        <xmlunit-assertj3.version>2.8.2</xmlunit-assertj3.version>
        <commons-text.version>1.10.0</commons-text.version>
        <freemarker.version>2.3.31</freemarker.version>
        <jsonassert.version>1.5.0</jsonassert.version>
        <org.everit.json.schema.version>1.5.1</org.everit.json.schema.version>
        <ognl.version>3.3.2</ognl.version>
        <org.json.version>20160810</org.json.version>
        <json-path.version>2.5.0</json-path.version>
        <testng.version>7.7.1</testng.version>
        <maven-source-plugin.version>3.0.1</maven-source-plugin.version>
        <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
        <maven-javadoc-plugin.version>3.0.1</maven-javadoc-plugin.version>
        <maven-surefire-plugin.version>3.0.0-M4</maven-surefire-plugin.version>
        <maven-assembly-plugin.version>3.1.0</maven-assembly-plugin.version>
        <maven-gpg-plugin.version>1.6</maven-gpg-plugin.version>
    </properties>

